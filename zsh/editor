############
#  EDITOR  #
############
# don't set it to macvim, zsh has troubles with double-aliases
export EDITOR=mvim
alias j=$EDITOR
alias vi=mvim
alias vim=mvim
alias macvim=mvim

alias svi="sudo vim"

function viw {
  local location=$(which "$1")
  if [[ -f "$location" ]]; then
    $EDITOR "$location"
  else
    echo "$location isn't a file."
  fi
}
