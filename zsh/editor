############
#  EDITOR  #
############
# don't set it to macvim, zsh has troubles with double-aliases
export EDITOR=mvim
alias j=$EDITOR
# -O = if given multiple files, open in 1 window/file
alias vim="mvim -O"
alias vi="mvim -O"
alias macvim="mvim -O"

alias svi="sudo vim"

function viw {
  local location=$(which "$1")
  if [[ -f "$location" ]]; then
    $EDITOR "$location"
  else
    echo "$location isn't a file."
  fi
}
