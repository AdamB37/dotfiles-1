############
#  EDITOR  #
############
# don't set it to macvim, zsh has troubles with double-aliases
export EDITOR="mvim -p" # -p = 1 tab/file
alias j=$EDITOR
alias vi="mvim -p"
alias svi="sudo vim"

function viw {
  local location=$(which "$1")
  if [[ -f "$location" ]]; then
    vim "$location"
  else
    echo "$location isn't a file."
  fi
}
