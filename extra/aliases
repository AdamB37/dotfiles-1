# basic aliases (mostly coreutils)
# * cp/rm/mv
# * q and qq
# * m/mm and p/pp

alias cp="cp -iv"
alias rm="rm -iv"
alias mv="mv -iv"
alias ls="ls -FGh"
alias du="du -cksh"
alias df="df -h"
# "color=auto" removes color when piping
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias grpe="grep" # fix typo
# highlight matched strings in red
export GREP_COLOR='1;31'
alias diff="colordiff -u"

# Use modern regexps for sed, i.e. "(one|two)", not "\(one\|two\)"
alias sed="sed -E"

function al { ls -t | head -n ${1:-10}; }
alias svi="sudo vim"
function viw { vim `which "$1"`; }

[ $BASH ] && rc=bashrc || rc=zshrc
function q {
    local snippet=$1
    if [[ -n $snippet ]]; then
      if [[ -f ~/.dotfiles/extra/$snippet ]]; then
        vim ~/.dotfiles/extra/$snippet
      else
        echo "~/.dotfiles/extra/$snippet does not exist."
      fi
    else
      vim ~/.$rc
    fi
}

# qq by itself sources profile; qq with an argument sources ~/.bash-{arg}
function qq {
    local snippet=$1
    if [[ -n $snippet ]]; then
      if [[ -f ~/.dotfiles/extra/$snippet ]]; then
        source ~/.dotfiles/extra/$snippet
      else
        echo "~/.dotfiles/extra/$snippet does not exist."
      fi
    else
      source ~/.$rc
    fi
}

# VLC / Preview stuff
function m {
    if [ ! $1 ]; then
      open -a VLC .
    else
      open -a VLC "$@"
    fi
}

function p() {
  if [ ! $1 ]; then
    open -a Preview .
  else
    open -a Preview "$@"
  fi
}

# pst = "p star"; intentionally not quoted so you can put your own stars in
#pst(){ open -a Preview *$1*; }
# you can pipe pure "ls" output to "pp"
alias pp="sed -e 's/ /\\\\\\\ /g' | xargs echo | xargs open -a Preview"
alias mm="sed -e 's/ /\\\\\\\ /g' | xargs echo | xargs open -a VLC"
