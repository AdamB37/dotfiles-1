alias ss="rails server"
alias sc="rails console"

# Use test environment
alias sst="rails server -e test"
alias rt="RAILS_ENV=test rake"

# Use production environment
alias ssp="rails server -e production"
alias rp="RAILS_ENV=production rake"

# tests
alias rtu="rake test:units"
alias rtf="rake test:functionals"
alias rtc="rake test:recent"
alias rtp="rake test:plugins"
alias rti="rake test:integration"

alias rcu="bundle exec cucumber" # not :all because that runs @wip too
# Only run scenarios tagged with @wip
# Tag a scenario with "@wip" above it like
# @wip
# Scenario: blah blah blah
alias wip="bundle exec cucumber:wip"

alias hartl="cd ~/Projects/rails/sample_app"
alias bi="bundle install --without production"
