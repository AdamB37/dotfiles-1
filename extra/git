# git stuff
# To delete a branch on github, do:
# git push origin :BRANCH_NAME
# This pushes nothing into BRANCH_NAME and so deletes it.
# More: http://help.github.com/remotes/

export MANPATH=$MANPATH:/usr/local/git/share/man
# Git achievements; see http://github.com/icefox/git-achievements
export PATH="$PATH:/Users/gabe/Projects/git-achievements/"
alias git="git-achievements"
compdef git-achievements=git

alias gp="git push"
alias gph="git push && git push heroku"
alias gd="git diff"

alias ga="git add"
alias gai="git add --interactive"

alias gb="git branch"
alias gcb="git checkout -b"
alias gc="git checkout"
alias gst="git st" # Use my alias from ~/.gitconfig
alias gcm="git commit -m"
alias gcam="git commit -am"

# What changed between last commit and now?
alias git-recent="git diff master~1"

# `git rm`'s files that have been `rm`ed manually (i.e. not through git).
# It's a function because I don't want to have to deal with quoting sed in
# an alias.
function git-remove {
  git status --porcelain | \egrep '^D' | \sed -E -e 's/^D *//' -e 's/ /\\ /g' -e 's/^|$/"/g'
}

# Use git-tweet project
function tweet(){
  pushd /Users/gabe/jbs/git-tweets
  git msg "$*"
  git push
  popd
}
