hash -d senior1=~brandeis/"Year 4, Semester 1"
hash -d 21b=~senior1/"COSI 21b - SICP"

# mit-scheme
PATH=$PATH:/Applications/mit-scheme.app/Contents/Resources/
alias scheme=mit-scheme

# "mscheme" = "my scheme"
function mscheme(){
  if (( $# == 0 ))
  then
    mit-scheme
    return
  fi

  args=""
  for x # ZSH just knows what to iterate over
  do
    args=$(echo $args "$PWD/$x")
  done
  mit-scheme --load $args
}
